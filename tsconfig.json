{
  // Project tsconfig - adjusted for local development and editor diagnostics
  // This file intentionally avoids referencing generated .nuxt tsconfigs so
  // developers can run tsc/ts-node locally without first building Nuxt.
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitOverride": false,
    "verbatimModuleSyntax": false,
    "forceConsistentCasingInFileNames": false,
    "incremental": true
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts",
    ".eslintrc.js",
    "server/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", ".nuxt", "coverage"]
}
